#show-read-feeds no
auto-reload yes

# Settings
download-path ~/Downloads
refresh-on-startup yes
reload-threads 10
download-full-page yes
show-keymap-hint no

# External programs
browser xdg-open %u
player mpv

history-limit 500

# Vim-like ketbinds
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
bind-key ^B pageup
bind-key ^F pagedown
bind-key d delete-article
bind-key g home
bind-key G end
bind-key n next-unread
bind-key N prev-unread
bind-key a toggle-article-read
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key o open-in-browser-and-mark-read
bind-key O open-all-unread-in-browser-and-mark-read


bind-key D pb-download
bind-key U show-urls
bind-key x pb-delete

# Colors
color listnormal        white default
color listnormal_unread green default bold
color listfocus         white color237
color listfocus_unread  white color237 bold
color info              color39 color237 bold
color background        white default
color article           white default


### OPEN PROGRAM ###
# Open rofi
super + r
 rofi -show combi

# Open firefox
super + q
 firefox

# Open vscode
super + a
 code

# Open file browser
super + {e, shift e}
 {$TERMINAL vifm,\
 $FILE_GUI}

# Open pinger
super + p
 st ping 1.1.1.1 -i 0.2
 
# Screen locker
control + alt + l
 $LOCKSCREEN

# Keyboard layout
super + alt + space
 rofi-keyboard

# Open terminal
super + Return
 $TERMINAL

# Open Screenshot tool
super + Print
 flameshot gui

# Open custom script menu
super + z 
 rofi-select

# Restart keybind 
control alt k
 pkill -SIGUSR1 sxhkd

# Chain test
alt x ; {h,j}
 notify-send {"HH","JJ"}

# Open communication apps
super w ; {w,l,f}
 firefox --new-window {https://web.whatsapp.com,\
 https://www.linkedin.com/,\
 https://www.facebook.com,\}

# Open other apps
super w ; {k,r,g,m,c}
 {keepassxc,\
 firefox --new-window https://www.reddit.com,\
 firefox --new-window https://github.com,\
 pgrep mpd >/dev/null && $TERMINAL -e ncmpcpp || (mpd && $TERMINAL -e ncmpcpp),\
 speedcrunch}

# Open Gmail
alt m ; {1,2,3}
 firefox --new-window https://mail.google.com/mail/u/{0,1,2}

### SYS MODS ###
# Brightness
XF86MonBrightnessUp
 xbacklight -inc 25 -time 0
XF86MonBrightnessDown
 xbacklight -dec 25 -time 0

### Lockscreen
XF86ScreenSaver
 glitch-lock

# Volume
XF86AudioRaiseVolume
 amixer -q set Master 10%+ unmute
XF86AudioLowerVolume
 amixer -q set Master 10%- unmute
XF86AudioMute
 amixer -q set Master toggle

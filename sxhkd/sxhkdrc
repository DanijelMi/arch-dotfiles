shift + {KP_Up,KP_Down}
 pactl set-sink-volume @DEFAULT_SINK@ {+10%,-10%} ; \
 dunstify -r "85102" -a Volume -u low -t 500 "Volume: $(amixer get Master | sed -n 's/^.*\[\([0-9]\+\)%.*$/\1/p'| uniq) $(amixer get Master | tail -n 1 | grep -q off && echo Muted)"
# Seek
shift + {KP_Home, KP_Prior} 
 mpc seek {-,+}00:00:5
